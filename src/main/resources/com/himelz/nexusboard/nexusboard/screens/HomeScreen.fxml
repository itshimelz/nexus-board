<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Game">
            <items>
              <MenuItem mnemonicParsing="false" text="New Game" />
              <MenuItem mnemonicParsing="false" text="Load Game" />
              <MenuItem mnemonicParsing="false" text="Save Game" />
              <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Options">
            <items>
              <MenuItem mnemonicParsing="false" text="Settings" />
              <MenuItem mnemonicParsing="false" text="Preferences" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <HBox spacing="10.0">
         <children>
            <!-- Chess Board Container -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Nexus Board Chess Game">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <!-- Chess Board Grid -->
                  <GridPane fx:id="chessBoard" alignment="CENTER" gridLinesVisible="false" hgap="0.0" vgap="0.0" style="-fx-border-color: #8B4513; -fx-border-width: 3px;">
                     <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                  </GridPane>
                  <!-- Board Coordinates -->
                  <HBox spacing="60.0" alignment="CENTER">
                     <children>
                        <Label text="a" />
                        <Label text="b" />
                        <Label text="c" />
                        <Label text="d" />
                        <Label text="e" />
                        <Label text="f" />
                        <Label text="g" />
                        <Label text="h" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <!-- Right Panel: Game Controls and Information -->
            <VBox spacing="15.0" prefWidth="250.0">
               <children>
                  <!-- Game Status -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Game Status" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        <Label fx:id="gameStatusLabel" text="White to move" />
                        <Label fx:id="turnLabel" text="Turn: 1" />
                     </children>
                  </VBox>
                  
                  <!-- Game Controls -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Game Controls" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        <Button fx:id="newGameButton" mnemonicParsing="false" text="New Game" prefWidth="150.0" />
                        <Button fx:id="undoButton" mnemonicParsing="false" text="Undo Move" prefWidth="150.0" />
                        <Button fx:id="resignButton" mnemonicParsing="false" text="Resign" prefWidth="150.0" />
                     </children>
                  </VBox>
                  
                  <!-- Move History -->
                  <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Move History" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        <ListView fx:id="moveHistoryList" prefHeight="200.0" />
                     </children>
                  </VBox>
                  
                  <!-- Captured Pieces -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Captured Pieces" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        <HBox fx:id="capturedWhitePieces" spacing="5.0" />
                        <HBox fx:id="capturedBlackPieces" spacing="5.0" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label fx:id="statusLabel" text="Ready to play" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
