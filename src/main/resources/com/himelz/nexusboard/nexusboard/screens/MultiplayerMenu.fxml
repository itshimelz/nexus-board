<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   
   <!-- Header Section -->
   <top>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-padding: 40;">
         <children>
            <!-- Game Title -->
            <Text fx:id="gameTitleText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="NEXUS BOARD">
               <font>
                  <Font name="Arial Bold" size="48.0" />
               </font>
            </Text>
            
            <!-- Multiplayer Section Title -->
            <Label fx:id="multiplayerTitleLabel" text="Multiplayer Game" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
            
            <!-- Connection Status -->
            <Label fx:id="connectionStatusLabel" text="Ready to connect" textFill="#ecf0f1">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   
   <!-- Main Content -->
   <center>
      <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #ecf0f1; -fx-padding: 50;">
         <children>
            
            <!-- Multiplayer Options Card -->
            <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" maxWidth="450.0" prefWidth="450.0">
               <children>
                  
                  <!-- Menu Title -->
                  <Label text="Choose Connection Type" textFill="#2c3e50">
                     <font>
                        <Font name="Arial Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  
                  <!-- Host Game Button -->
                  <Button fx:id="hostGameButton" mnemonicParsing="false" onAction="#onHostGameClick"
                          prefHeight="55.0" prefWidth="350.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold;" 
                          text="ðŸ–¥ï¸ Host Game">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Join Game Button -->
                  <Button fx:id="joinGameButton" mnemonicParsing="false" onAction="#onJoinGameClick"
                          prefHeight="55.0" prefWidth="350.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold;" 
                          text="ðŸŒ Join Game">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Direct Connect Button -->
                  <Button fx:id="directConnectButton" mnemonicParsing="false" onAction="#onDirectConnectClick"
                          prefHeight="50.0" prefWidth="350.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px; -fx-font-weight: bold;" 
                          text="âš¡ Quick Connect">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Separator -->
                  <Separator prefWidth="300.0" style="-fx-background-color: #bdc3c7;">
                     <VBox.margin>
                        <Insets top="10.0" bottom="10.0" />
                     </VBox.margin>
                  </Separator>
                  
                  <!-- Back Button -->
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick"
                          prefHeight="45.0" prefWidth="350.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" 
                          text="â† Back to Main Menu">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Button>
                  
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <!-- Instructions Card -->
            <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);" maxWidth="450.0" prefWidth="450.0">
               <children>
                  <Label text="How to Play Multiplayer" textFill="#2c3e50">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <Label text="â€¢ Host Game: Start a server and share your IP with friends" textFill="#7f8c8d" wrapText="true">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                  </Label>
                  
                  <Label text="â€¢ Join Game: Connect to a friend's hosted game" textFill="#7f8c8d" wrapText="true">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                  </Label>
                  
                  <Label text="â€¢ Quick Connect: Enter IP directly for faster connection" textFill="#7f8c8d" wrapText="true">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </VBox>
            
         </children>
      </VBox>
   </center>
   
   <!-- Footer -->
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
         <children>
            <Label fx:id="networkStatusLabel" text="Network: Ready" textFill="#27ae60">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Â© 2025 Nexus Board - Multiplayer" textFill="#bdc3c7">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
   
   <!-- Loading Overlay (Initially Hidden) -->
   <fx:define>
      <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="20.0" style="-fx-background-color: rgba(0,0,0,0.7);" visible="false">
         <children>
            <ProgressIndicator prefHeight="50.0" prefWidth="50.0" />
            <Label fx:id="loadingMessage" text="Connecting..." textFill="WHITE">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </fx:define>
   
</BorderPane>
