<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@../styles/application.css" styleClass="main-layout">
   
   <!-- Header Section -->
   <top>
      <VBox alignment="CENTER" spacing="12.0" styleClass="card-header">
         <children>
            <!-- Game Title -->
            <Text fx:id="gameTitleText" styleClass="title-large" text="NEXUS BOARD" />
            
            <!-- Multiplayer Section Title -->
            <Label fx:id="multiplayerTitleLabel" text="Multiplayer Game" styleClass="title-medium" />
            
            <!-- Connection Status -->
            <Label fx:id="connectionStatusLabel" text="Ready to connect" styleClass="subtitle" />
         </children>
         <padding>
            <Insets bottom="20.0" left="32.0" right="32.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   
   <!-- Main Content -->
   <center>
      <VBox alignment="CENTER" spacing="24.0" styleClass="content-container">
         <children>
            
            <!-- Multiplayer Options Card -->
            <VBox alignment="CENTER" spacing="16.0" styleClass="card" maxWidth="500.0" prefWidth="500.0">
               <children>
                  
                  <!-- Menu Title -->
                  <Label text="Choose Connection Type" styleClass="title-small" />
                  
                  <!-- Host Game Button -->
                  <Button fx:id="hostGameButton" mnemonicParsing="false" onAction="#onHostGameClick"
                          prefHeight="52.0" prefWidth="380.0" styleClass="button, button-secondary, button-lg"
                          text="⌨ Host Game">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Join Game Button -->
                  <Button fx:id="joinGameButton" mnemonicParsing="false" onAction="#onJoinGameClick"
                          prefHeight="52.0" prefWidth="380.0" styleClass="button, button-primary, button-lg"
                          text="🌐 Join Game">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Direct Connect Button -->
                  <Button fx:id="directConnectButton" mnemonicParsing="false" onAction="#onDirectConnectClick"
                          prefHeight="44.0" prefWidth="380.0" styleClass="button, button-warning"
                          text="⚡ Quick Connect">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Separator -->
                  <Separator prefWidth="340.0">
                     <VBox.margin>
                        <Insets bottom="8.0" top="8.0" />
                     </VBox.margin>
                  </Separator>
                  
                  <!-- Back Button -->
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick"
                          prefHeight="40.0" prefWidth="380.0" styleClass="button, button-ghost"
                          text="← Back to Main Menu">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
               </children>
               <padding>
                  <Insets bottom="28.0" left="28.0" right="28.0" top="28.0" />
               </padding>
            </VBox>
            
            <!-- Instructions Card -->
            <VBox alignment="CENTER" spacing="12.0" styleClass="card" maxWidth="500.0" prefWidth="500.0">
               <children>
                  <Label text="How to Play Multiplayer" styleClass="subtitle" />
                  
                  <Label text="• Host Game: Start a server and share your IP with friends" styleClass="caption" wrapText="true" />
                  
                  <Label text="• Join Game: Connect to a friend's hosted game" styleClass="caption" wrapText="true" />
                  
                  <Label text="• Quick Connect: Enter IP directly for faster connection" styleClass="caption" wrapText="true" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="28.0" right="28.0" top="20.0" />
               </padding>
            </VBox>
            
         </children>
         <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="24.0" />
         </padding>
      </VBox>
   </center>
   
   <!-- Footer -->
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" styleClass="card-header">
         <children>
            <Label fx:id="networkStatusLabel" text="Network: Ready" styleClass="status-success" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="© 2025 Nexus Board - Multiplayer" styleClass="caption" />
         </children>
         <padding>
            <Insets bottom="16.0" left="32.0" right="32.0" top="16.0" />
         </padding>
      </HBox>
   </bottom>
   
   <!-- Loading Overlay (Initially Hidden) -->
   <fx:define>
      <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="20.0" styleClass="loading" visible="false">
         <children>
            <ProgressIndicator prefHeight="50.0" prefWidth="50.0" />
            <Label fx:id="loadingMessage" text="Connecting..." styleClass="subtitle" />
         </children>
      </VBox>
   </fx:define>
   
</BorderPane>
