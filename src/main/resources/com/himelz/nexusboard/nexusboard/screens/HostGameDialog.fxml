<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" 
     alignment="CENTER" spacing="20.0" styleClass="content-container" 
     stylesheets="@../styles/application.css">
   
   <!-- Header Section -->
   <VBox alignment="CENTER" spacing="12.0" styleClass="card-header">
      <children>
         <!-- Host Game Title -->
         <Text fx:id="titleText" styleClass="title-medium" text="Host Game" />
         
         <!-- Subtitle -->
         <Label fx:id="subtitleLabel" text="Start a server and share your connection details" styleClass="subtitle" />
      </children>
      <padding>
         <Insets bottom="20.0" left="32.0" right="32.0" top="20.0" />
      </padding>
   </VBox>
   
   <!-- Main Content Card -->
   <VBox alignment="CENTER" spacing="18.0" styleClass="card" maxWidth="480.0" prefWidth="480.0">
      <children>
         
         <!-- Player Name Section -->
         <VBox alignment="CENTER" spacing="8.0">
            <children>
               <Label text="Your Player Name" styleClass="title-small" />
               <TextField fx:id="playerNameField" promptText="Enter your name..." styleClass="text-field" prefWidth="320.0" />
            </children>
         </VBox>
         
         <!-- Server Configuration Section -->
         <VBox alignment="CENTER" spacing="16.0">
            <children>
               <Label text="Server Configuration" styleClass="title-small" />
               
               <!-- IP Address Display -->
               <VBox alignment="CENTER" spacing="6.0">
                  <children>
                     <Label text="Your IP Address (share with friends)" styleClass="caption" />
                     <HBox alignment="CENTER" spacing="12.0">
                        <children>
                           <TextField fx:id="ipAddressField" editable="false" styleClass="text-field" prefWidth="220.0" text="Loading..." />
                           <Button fx:id="copyIpButton" mnemonicParsing="false" onAction="#onCopyIpClick" styleClass="button, button-primary" text="⧉ Copy">
                              <cursor>
                                 <javafx.scene.Cursor fx:constant="HAND" />
                              </cursor>
                           </Button>
                        </children>
                     </HBox>
                  </children>
               </VBox>
               
               <!-- Port Configuration -->
               <VBox alignment="CENTER" spacing="6.0">
                  <children>
                     <Label text="Port Number" styleClass="caption" />
                     <TextField fx:id="portField" styleClass="text-field" prefWidth="120.0" text="8888" />
                  </children>
               </VBox>
            </children>
         </VBox>
         
         <!-- Connection Status -->
         <VBox alignment="CENTER" spacing="10.0">
            <children>
               <Label fx:id="statusLabel" text="Ready to start server" styleClass="status-info" />
               <Label fx:id="playerCountLabel" text="Players connected: 0/2" styleClass="caption" />
            </children>
         </VBox>
         
         <!-- Action Buttons -->
         <HBox alignment="CENTER" spacing="16.0">
            <children>
               <Button fx:id="startServerButton" mnemonicParsing="false" onAction="#onStartServerClick" prefHeight="42.0" prefWidth="140.0" styleClass="button, button-secondary" text="▶ Start Server">
                  <cursor>
                     <javafx.scene.Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
               <Button fx:id="stopServerButton" mnemonicParsing="false" onAction="#onStopServerClick" prefHeight="42.0" prefWidth="140.0" styleClass="button, button-accent" text="⏹ Stop Server" disable="true">
                  <cursor>
                     <javafx.scene.Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </children>
         </HBox>
         
      </children>
      <padding>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </padding>
   </VBox>
   
   <!-- Instructions Card -->
   <VBox alignment="CENTER" spacing="10.0" styleClass="card" maxWidth="480.0" prefWidth="480.0">
      <children>
         <Label text="Instructions" styleClass="subtitle" />
         <Label text="1. Enter your player name" styleClass="caption" wrapText="true" />
         <Label text="2. Click 'Start Server' to begin hosting" styleClass="caption" wrapText="true" />
         <Label text="3. Share your IP address with friends" styleClass="caption" wrapText="true" />
         <Label text="4. Wait for opponent to connect" styleClass="caption" wrapText="true" />
      </children>
      <padding>
         <Insets bottom="20.0" left="28.0" right="28.0" top="20.0" />
      </padding>
   </VBox>
   
   <!-- Bottom Buttons -->
   <HBox alignment="CENTER" spacing="16.0">
      <children>
         <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick" prefHeight="38.0" prefWidth="120.0" styleClass="button, button-ghost" text="← Back">
            <cursor>
               <javafx.scene.Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="helpButton" mnemonicParsing="false" onAction="#onHelpClick" prefHeight="38.0" prefWidth="120.0" styleClass="button, button-warning" text="? Help">
            <cursor>
               <javafx.scene.Cursor fx:constant="HAND" />
            </cursor>
         </Button>
      </children>
   </HBox>
   
</VBox>
