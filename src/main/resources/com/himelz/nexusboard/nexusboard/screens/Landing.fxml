<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   
   <!-- Header Section -->
   <top>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-padding: 40;">
         <children>
            <!-- Game Title -->
            <Text fx:id="gameTitleText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="NEXUS BOARD">
               <font>
                  <Font name="Arial Bold" size="48.0" />
               </font>
            </Text>
            
            <!-- Welcome Message -->
            <Label fx:id="welcomeLabel" text="Welcome to Nexus Board" textFill="WHITE">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   
   <!-- Main Content -->
   <center>
      <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #ecf0f1; -fx-padding: 50;">
         <children>
            
            <!-- Main Menu Card -->
            <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" maxWidth="400.0" prefWidth="400.0">
               <children>
                  
                  <!-- Menu Title -->
                  <Label text="Choose Game Mode" textFill="#2c3e50">
                     <font>
                        <Font name="Arial Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  
                  <!-- Single Player Button -->
                  <Button fx:id="singlePlayerButton" mnemonicParsing="false" onAction="#onSinglePlayerClick"
                          prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold;" 
                          text="Single Player">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Multiplayer Button -->
                  <Button fx:id="multiplayerButton" mnemonicParsing="false" onAction="#onMultiplayerClick"
                          prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold;" 
                          text="Multiplayer">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Settings Button -->
                  <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettingsClick"
                          prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" 
                          text="Settings">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- About Button -->
                  <Button fx:id="aboutButton" mnemonicParsing="false" onAction="#onAboutClick"
                          prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" 
                          text="About">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Exit Button -->
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitClick"
                          prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" 
                          text="Exit">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Button>
                  
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
         </children>
      </VBox>
   </center>
   
   <!-- Footer -->
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
         <children>
            <Label fx:id="versionLabel" text="Version 1.0.0" textFill="#bdc3c7">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Â© 2025 Nexus Board" textFill="#bdc3c7">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
   
   <!-- Loading Overlay (Initially Hidden) -->
   <fx:define>
      <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="20.0" style="-fx-background-color: rgba(0,0,0,0.7);" visible="false">
         <children>
            <ProgressIndicator prefHeight="50.0" prefWidth="50.0" />
            <Label text="Loading..." textFill="WHITE">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </fx:define>
   
</BorderPane>