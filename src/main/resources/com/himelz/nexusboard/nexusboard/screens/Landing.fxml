<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           stylesheets="@../styles/application.css" styleClass="main-layout">
   
   <!-- Header Section -->
   <top>
      <VBox alignment="CENTER" spacing="16.0" styleClass="card-header">
         <children>
            <!-- Game Title -->
            <Text fx:id="gameTitleText" styleClass="title-large" text="NEXUS BOARD" />
            
            <!-- Welcome Message -->
            <Label fx:id="welcomeLabel" text="Welcome to Nexus Board" styleClass="subtitle" />
         </children>
         <padding>
            <Insets bottom="24.0" left="32.0" right="32.0" top="24.0" />
         </padding>
      </VBox>
   </top>
   
   <!-- Main Content -->
   <center>
      <VBox alignment="CENTER" spacing="24.0" styleClass="content-container">
         <children>
            
            <!-- Main Menu Card -->
            <VBox alignment="CENTER" spacing="16.0" styleClass="card" maxWidth="450.0" prefWidth="450.0">
               <children>
                  
                  <!-- Menu Title -->
                  <Label text="Choose Game Mode" styleClass="title-small" />
                  
                  <!-- Single Player Button -->
                  <Button fx:id="singlePlayerButton" mnemonicParsing="false" onAction="#onSinglePlayerClick"
                          prefHeight="48.0" prefWidth="320.0" styleClass="button, button-secondary, button-lg"
                          text="Single Player">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Multiplayer Button -->
                  <Button fx:id="multiplayerButton" mnemonicParsing="false" onAction="#onMultiplayerClick"
                          prefHeight="48.0" prefWidth="320.0" styleClass="button, button-primary, button-lg"
                          text="Multiplayer">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Settings Button -->
                  <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettingsClick"
                          prefHeight="40.0" prefWidth="320.0" styleClass="button, button-warning"
                          text="Settings">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- About Button -->
                  <Button fx:id="aboutButton" mnemonicParsing="false" onAction="#onAboutClick"
                          prefHeight="40.0" prefWidth="320.0" styleClass="button, button-outline"
                          text="About">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
                  <!-- Exit Button -->
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitClick"
                          prefHeight="40.0" prefWidth="320.0" styleClass="button, button-accent"
                          text="Exit">
                     <cursor>
                        <javafx.scene.Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  
               </children>
               <padding>
                  <Insets bottom="28.0" left="28.0" right="28.0" top="28.0" />
               </padding>
            </VBox>
            
         </children>
         <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
         </padding>
      </VBox>
   </center>
   
   <!-- Footer -->
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" styleClass="card-header">
         <children>
            <Label fx:id="versionLabel" text="Version 1.0.0" styleClass="caption" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Â© 2025 Nexus Board" styleClass="caption" />
         </children>
         <padding>
            <Insets bottom="16.0" left="32.0" right="32.0" top="16.0" />
         </padding>
      </HBox>
   </bottom>
   
   <!-- Loading Overlay (Initially Hidden) -->
   <fx:define>
      <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="20.0" styleClass="loading" visible="false">
         <children>
            <ProgressIndicator prefHeight="50.0" prefWidth="50.0" />
            <Label text="Loading..." styleClass="subtitle" />
         </children>
      </VBox>
   </fx:define>
   
</BorderPane>