<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
   
   <!-- Header Section -->
   <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(to bottom, #3498db, #5dade2); -fx-background-radius: 15; -fx-padding: 20;">
      <children>
         <!-- Join Game Title -->
         <Text fx:id="titleText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Join Game">
            <font>
               <Font name="Arial Bold" size="26.0" />
            </font>
         </Text>
         
         <!-- Subtitle -->
         <Label fx:id="subtitleLabel" text="Connect to a friend's hosted game" textFill="WHITE">
            <font>
               <Font name="Arial" size="13.0" />
            </font>
         </Label>
      </children>
   </VBox>
   
   <!-- Main Content Card -->
   <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 25;" maxWidth="420.0" prefWidth="420.0">
      <children>
         
         <!-- Player Name Section -->
         <VBox alignment="CENTER" spacing="6.0">
            <children>
               <Label text="Your Player Name" textFill="#2c3e50">
                  <font>
                     <Font name="Arial Bold" size="13.0" />
                  </font>
               </Label>
               <TextField fx:id="playerNameField" promptText="Enter your name..." style="-fx-background-radius: 8; -fx-padding: 8;" prefWidth="280.0">
                  <font>
                     <Font name="Arial" size="13.0" />
                  </font>
               </TextField>
            </children>
         </VBox>
         
         <!-- Connection Details Section -->
         <VBox alignment="CENTER" spacing="12.0">
            <children>
               <Label text="Server Connection" textFill="#2c3e50">
                  <font>
                     <Font name="Arial Bold" size="15.0" />
                  </font>
               </Label>
               
               <!-- Server IP Address -->
               <VBox alignment="CENTER" spacing="4.0">
                  <children>
                     <Label text="Server IP Address" textFill="#7f8c8d">
                        <font>
                           <Font name="Arial" size="11.0" />
                        </font>
                     </Label>
                     <TextField fx:id="serverIpField" promptText="Enter server IP (e.g., 192.168.1.100)" style="-fx-background-radius: 8; -fx-padding: 8;" prefWidth="280.0">
                        <font>
                           <Font name="Arial" size="13.0" />
                        </font>
                     </TextField>
                  </children>
               </VBox>
               
               <!-- Port Configuration -->
               <VBox alignment="CENTER" spacing="4.0">
                  <children>
                     <Label text="Port Number" textFill="#7f8c8d">
                        <font>
                           <Font name="Arial" size="11.0" />
                        </font>
                     </Label>
                     <TextField fx:id="portField" style="-fx-background-radius: 8; -fx-padding: 6;" prefWidth="120.0" text="8888">
                        <font>
                           <Font name="Arial" size="13.0" />
                        </font>
                     </TextField>
                  </children>
               </VBox>
               
               <!-- Quick Connection Preset -->
               <VBox alignment="CENTER" spacing="4.0">
                  <children>
                     <Label text="Or paste connection info" textFill="#7f8c8d">
                        <font>
                           <Font name="Arial" size="10.0" />
                        </font>
                     </Label>
                     <HBox alignment="CENTER" spacing="8.0">
                        <children>
                           <TextField fx:id="connectionStringField" promptText="IP:Port (e.g., 192.168.1.100:8888)" style="-fx-background-radius: 8; -fx-padding: 6;" prefWidth="180.0">
                              <font>
                                 <Font name="Arial" size="11.0" />
                              </font>
                           </TextField>
                           <Button fx:id="parseConnectionButton" mnemonicParsing="false" onAction="#onParseConnectionClick" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6;" text="Parse">
                              <cursor>
                                 <javafx.scene.Cursor fx:constant="HAND" />
                              </cursor>
                           </Button>
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </VBox>
         
         <!-- Connection Status -->
         <VBox alignment="CENTER" spacing="8.0">
            <children>
               <Label fx:id="statusLabel" text="Ready to connect" textFill="#2c3e50">
                  <font>
                     <Font name="Arial Bold" size="13.0" />
                  </font>
               </Label>
               <ProgressIndicator fx:id="connectionProgress" visible="false" prefHeight="25.0" prefWidth="25.0" />
            </children>
         </VBox>
         
         <!-- Action Buttons -->
         <HBox alignment="CENTER" spacing="12.0">
            <children>
               <Button fx:id="connectButton" mnemonicParsing="false" onAction="#onConnectClick" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 13px; -fx-font-weight: bold;" text="Connect">
                  <cursor>
                     <javafx.scene.Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
               <Button fx:id="disconnectButton" mnemonicParsing="false" onAction="#onDisconnectClick" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 13px; -fx-font-weight: bold;" text="Disconnect" disable="true">
                  <cursor>
                     <javafx.scene.Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </children>
         </HBox>
         
      </children>
   </VBox>
   
   <!-- Instructions Card -->
   <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1); -fx-padding: 15;" maxWidth="420.0" prefWidth="420.0">
      <children>
         <Label text="Instructions" textFill="#2c3e50">
            <font>
               <Font name="Arial Bold" size="13.0" />
            </font>
         </Label>
         <Label text="1. Enter your player name" textFill="#7f8c8d" wrapText="true">
            <font>
               <Font name="Arial" size="10.0" />
            </font>
         </Label>
         <Label text="2. Get the IP address from your friend" textFill="#7f8c8d" wrapText="true">
            <font>
               <Font name="Arial" size="10.0" />
            </font>
         </Label>
         <Label text="3. Enter the server IP and port" textFill="#7f8c8d" wrapText="true">
            <font>
               <Font name="Arial" size="10.0" />
            </font>
         </Label>
         <Label text="4. Click 'Connect' to join the game" textFill="#7f8c8d" wrapText="true">
            <font>
               <Font name="Arial" size="10.0" />
            </font>
         </Label>
      </children>
   </VBox>
   
   <!-- Recent Connections -->
   <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1); -fx-padding: 12;" maxWidth="420.0" prefWidth="420.0">
      <children>
         <Label text="Recent Connections" textFill="#2c3e50">
            <font>
               <Font name="Arial Bold" size="11.0" />
            </font>
         </Label>
         <ListView fx:id="recentConnectionsList" prefHeight="70.0" prefWidth="380.0" style="-fx-background-radius: 5;">
            <placeholder>
               <Label text="No recent connections" textFill="#95a5a6">
                  <font>
                     <Font name="Arial" size="10.0" />
                  </font>
               </Label>
            </placeholder>
         </ListView>
      </children>
   </VBox>
   
   <!-- Bottom Buttons -->
   <HBox alignment="CENTER" spacing="12.0">
      <children>
         <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 11px;" text="← Back">
            <cursor>
               <javafx.scene.Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="helpButton" mnemonicParsing="false" onAction="#onHelpClick" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 11px;" text="Help">
            <cursor>
               <javafx.scene.Cursor fx:constant="HAND" />
            </cursor>
         </Button>
      </children>
   </HBox>
   
</VBox>
