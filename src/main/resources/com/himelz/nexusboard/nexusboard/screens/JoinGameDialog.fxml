<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" 
     alignment="CENTER" spacing="20.0" styleClass="content-container" 
     stylesheets="@../styles/application.css">
   
   <!-- Header Section -->
   <VBox alignment="CENTER" spacing="12.0" styleClass="card-header">
      <children>
         <!-- Join Game Title -->
         <Text fx:id="titleText" styleClass="title-medium" text="Join Game" />
         
         <!-- Subtitle -->
         <Label fx:id="subtitleLabel" text="Connect to a friend's hosted game" styleClass="subtitle" />
      </children>
      <padding>
         <Insets bottom="20.0" left="32.0" right="32.0" top="20.0" />
      </padding>
   </VBox>
   
   <!-- Main Content Card -->
   <VBox alignment="CENTER" spacing="18.0" styleClass="card" maxWidth="480.0" prefWidth="480.0">
      <children>
         
         <!-- Player Name Section -->
         <VBox alignment="CENTER" spacing="8.0">
            <children>
               <Label text="Your Player Name" styleClass="title-small" />
               <TextField fx:id="playerNameField" promptText="Enter your name..." styleClass="text-field" prefWidth="320.0" />
            </children>
         </VBox>
         
         <!-- Connection Details Section -->
         <VBox alignment="CENTER" spacing="16.0">
            <children>
               <Label text="Server Connection" styleClass="title-small" />
               
               <!-- Server IP Address -->
               <VBox alignment="CENTER" spacing="6.0">
                  <children>
                     <Label text="Server IP Address" styleClass="caption" />
                     <TextField fx:id="serverIpField" promptText="Enter server IP (e.g., 192.168.1.100)" styleClass="text-field" prefWidth="320.0" />
                  </children>
               </VBox>
               
               <!-- Port Configuration -->
               <VBox alignment="CENTER" spacing="6.0">
                  <children>
                     <Label text="Port Number" styleClass="caption" />
                     <TextField fx:id="portField" styleClass="text-field" prefWidth="120.0" text="8888" />
                  </children>
               </VBox>
               
               <!-- Quick Connection Preset -->
               <VBox alignment="CENTER" spacing="6.0">
                  <children>
                     <Label text="Or paste connection info" styleClass="caption" />
                     <HBox alignment="CENTER" spacing="12.0">
                        <children>
                           <TextField fx:id="connectionStringField" promptText="IP:Port (e.g., 192.168.1.100:8888)" styleClass="text-field" prefWidth="220.0" />
                           <Button fx:id="parseConnectionButton" mnemonicParsing="false" onAction="#onParseConnectionClick" styleClass="button, button-warning" text="↓ Parse">
                              <cursor>
                                 <javafx.scene.Cursor fx:constant="HAND" />
                              </cursor>
                           </Button>
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </VBox>
         
         <!-- Connection Status -->
         <VBox alignment="CENTER" spacing="10.0">
            <children>
               <Label fx:id="statusLabel" text="Ready to connect" styleClass="status-info" />
               <ProgressIndicator fx:id="connectionProgress" visible="false" prefHeight="25.0" prefWidth="25.0" />
            </children>
         </VBox>
         
         <!-- Action Buttons -->
         <HBox alignment="CENTER" spacing="16.0">
            <children>
               <Button fx:id="connectButton" mnemonicParsing="false" onAction="#onConnectClick" prefHeight="42.0" prefWidth="140.0" styleClass="button, button-primary" text="⚡ Connect">
                  <cursor>
                     <javafx.scene.Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
               <Button fx:id="disconnectButton" mnemonicParsing="false" onAction="#onDisconnectClick" prefHeight="42.0" prefWidth="140.0" styleClass="button, button-accent" text="⏹ Disconnect" disable="true">
                  <cursor>
                     <javafx.scene.Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </children>
         </HBox>
         
      </children>
      <padding>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </padding>
   </VBox>
   
   <!-- Instructions Card -->
   <VBox alignment="CENTER" spacing="10.0" styleClass="card" maxWidth="480.0" prefWidth="480.0">
      <children>
         <Label text="Instructions" styleClass="subtitle" />
         <Label text="1. Enter your player name" styleClass="caption" wrapText="true" />
         <Label text="2. Get the IP address from your friend" styleClass="caption" wrapText="true" />
         <Label text="3. Enter the server IP and port" styleClass="caption" wrapText="true" />
         <Label text="4. Click 'Connect' to join the game" styleClass="caption" wrapText="true" />
      </children>
      <padding>
         <Insets bottom="20.0" left="28.0" right="28.0" top="20.0" />
      </padding>
   </VBox>
   
   <!-- Recent Connections -->
   <VBox alignment="CENTER" spacing="10.0" styleClass="card" maxWidth="480.0" prefWidth="480.0">
      <children>
         <Label text="Recent Connections" styleClass="title-small" />
         <ListView fx:id="recentConnectionsList" prefHeight="80.0" prefWidth="400.0">
            <placeholder>
               <Label text="No recent connections" styleClass="caption" />
            </placeholder>
         </ListView>
      </children>
      <padding>
         <Insets bottom="20.0" left="28.0" right="28.0" top="20.0" />
      </padding>
   </VBox>
   
   <!-- Bottom Buttons -->
   <HBox alignment="CENTER" spacing="16.0">
      <children>
         <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick" prefHeight="38.0" prefWidth="120.0" styleClass="button, button-ghost" text="← Back">
            <cursor>
               <javafx.scene.Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="helpButton" mnemonicParsing="false" onAction="#onHelpClick" prefHeight="38.0" prefWidth="120.0" styleClass="button, button-warning" text="? Help">
            <cursor>
               <javafx.scene.Cursor fx:constant="HAND" />
            </cursor>
         </Button>
      </children>
   </HBox>
   
</VBox>
